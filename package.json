{
  "name": "primerosefarms",
  "version": "1.0.0",
  "description": "Agricultural farm management system with role-based interfaces",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "nodemon src/server.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "clean": "rimraf dist",
    "build:clean": "npm run clean && npm run build",
    "start:prod": "npm run build:clean && npm start",
    "dev:frontend": "cd client && npm start",
    "dev:backend": "npm run dev",
    "dev:both": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "install:all": "npm install && cd client && npm install",
    "setup": "npm run install:all && cp env.example .env",
    "quick-start": "powershell -ExecutionPolicy Bypass -File quick-start.ps1",
    "start-dev": "powershell -ExecutionPolicy Bypass -File start-dev.ps1",
    "stop-dev": "powershell -ExecutionPolicy Bypass -File stop-dev.ps1",
    "create-demo-users": "powershell -ExecutionPolicy Bypass -File scripts/create-demo-users.ps1",
    "start-simple": "start-simple.cmd",
    "stop-simple": "stop-simple.cmd"
  },
  "keywords": [
    "agriculture",
    "farm-management",
    "typescript",
    "nodejs",
    "react",
    "mongodb"
  ],
  "author": "PrimeRoseFarms Development Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^8.0.3",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "winston": "^3.11.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "compression": "^1.7.4",
    "multer": "^1.4.5-lts.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.4",
    "@types/express": "^4.17.21",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@types/multer": "^1.4.11",
    "@types/jest": "^29.5.8",
    "typescript": "^5.3.3",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/primerosefarms/farm-management-system.git"
  },
  "bugs": {
    "url": "https://github.com/primerosefarms/farm-management-system/issues"
  },
  "homepage": "https://github.com/primerosefarms/farm-management-system#readme"
}